programa ejercicio1B
procesos
  proceso juntarFlores(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:=f + 1
  fin

  proceso recorrerArea(ES f:numero)
  comenzar
    repetir 9
      juntarFlores(f)
      mover
    juntarFlores(f)
  fin

areas
  ciudad1: AreaP (1,1,1,10)
  ciudad2: AreaP (2,11,2,20)
  ciudad3: AreaP (2,1,2,1)

robots
  robot robotJuntador
  variables
    f:numero
  comenzar
    f:=0
    recorrerArea(f)
    EnviarMensaje(f, r3)
  fin
  robot robotFiscalizador
  variables
    f1, f2:numero
  comenzar
    RecibirMensaje(f1, *)
    RecibirMensaje(f2, *)
    si(f1 > f2)
      Informar('Diferencia', f1-f2)
    sino
      Informar('Diferencia', f2-f1)
  fin

variables
  r1:robotJuntador
  r2:robotJuntador
  r3:robotFiscalizador
comenzar
  AsignarArea(r1, ciudad1)
  AsignarArea(r2, ciudad2)
  AsignarArea(r3, ciudad3)
  Iniciar(r1,1,1)
  Iniciar(r2,2,11)
  Iniciar(r3,2,1)
fin
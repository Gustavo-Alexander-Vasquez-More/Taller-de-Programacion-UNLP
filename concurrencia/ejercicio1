programa ejemplo
procesos
  proceso recorrerAvenida(ES flores:numero; ES esquinas:numero)
  comenzar
    mientras(PosCa < 100)
      juntarFlores(flores, esquinas)
      mover
    juntarFlores(flores, esquinas)
    devolverFlores(flores)
  fin
  
  proceso juntarFlores(ES flores: numero; ES esquinas: numero)
  comenzar
    si(HayFlorEnLaEsquina)
      mientras(HayFlorEnLaEsquina)
        tomarFlor
        flores:=flores + 1
    sino
      esquinas:=esquinas + 1
  fin
  
  proceso devolverFlores(E flores: numero)
  comenzar
    repetir flores
      depositarFlor
  fin
areas
  ciudad1: AreaP (1,1,1,100)
  ciudad2: AreaP (3,1,3,100)
  ciudad3: AreaP (5,1,5,100)
robots
  robot robot1
  variables
    flores:numero
    esquinas:numero
  comenzar
    flores:=0
    esquinas:=0
    recorrerAvenida(flores, esquinas)  
  fin
variables
  r1: robot1
  r2: robot1
  r3: robot1
comenzar
  AsignarArea(r1, ciudad1)
  AsignarArea(r2, ciudad2)
  AsignarArea(r3, ciudad3)
  Iniciar(r1, 1,1)
  Iniciar(r2, 3,1)
  Iniciar(r3, 5,1)   
fin
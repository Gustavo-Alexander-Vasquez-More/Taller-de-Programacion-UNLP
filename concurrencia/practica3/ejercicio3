programa ejemplo
procesos
  proceso tomarF(ES f:numero; ES ok:boolean)
  comenzar
    si HayFlorEnLaEsquina
      tomarFlor
      f:=f+1
    sino
      ok:=F
  fin
  proceso asignarId
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    EnviarMensaje(4,r4)
  fin
  proceso asignarPosicion
  variables
    av:numero
    ca:numero
  comenzar
    Random(av,2,10)
    Random(ca,2,10)
    EnviarMensaje(av,r1)
    EnviarMensaje(ca,r1)
    EnviarMensaje(av,r2)
    EnviarMensaje(ca,r2)
    EnviarMensaje(av,r3)
    EnviarMensaje(ca,r3)
    EnviarMensaje(av,r4)
    EnviarMensaje(ca,r4)
  fin
areas
  ciudadFlores: AreaC (2,2,10,10)
  ciudadJefe: AreaP (1,1,1,1)
  ciudadR1: AreaP (2,1,2,1)
  ciudadR2: AreaP (3,1,3,1)
  ciudadR3: AreaP (4,1,4,1)
  ciudadR4: AreaP (5,1,5,1)
robots
  robot florero
  variables
    id:numero
    av:numero
    ca:numero
    f:numero
    avIni:numero
    caIni:numero
    ok:boolean
  comenzar
    avIni:=PosAv
    caIni:=PosCa
    f:=0
    ok:=V
    RecibirMensaje(id,jefe)
    RecibirMensaje(av,jefe)
    RecibirMensaje(ca,jefe)
    mientras ok
      BloquearEsquina(av,ca)
      Pos(av,ca)
      tomarF(f, ok)
      Pos(avIni,caIni)
      LiberarEsquina(av,ca)
    EnviarMensaje(id,jefe)
    EnviarMensaje(f,jefe)
  fin
  robot robotJefe
  variables
    id:numero
    idMax:numero
    fMax:numero
    fRecibidas:numero
  comenzar
    idMax:=0
    fMax:=-1
    asignarId
    asignarPosicion
    repetir 4
      RecibirMensaje(id,*)
      si(id=1)
        RecibirMensaje(fRecibidas,r1)
      sino
        si(id=2)
          RecibirMensaje(fRecibidas,r2)
        sino
          si(id=3)
            RecibirMensaje(fRecibidas,r3)
          sino
            RecibirMensaje(fRecibidas,r4)
      si(fRecibidas > fMax)
        fMax:=fRecibidas
        idMax:=id
    Informar('Ganador',idMax)  
  fin
variables
  r1: florero
  r2: florero
  r3: florero
  r4: florero
  jefe: robotJefe
comenzar
  AsignarArea(r1, ciudadR1)
  AsignarArea(r1, ciudadFlores)
  AsignarArea(r2, ciudadR2)
  AsignarArea(r2, ciudadFlores)
  AsignarArea(r3, ciudadR3)
  AsignarArea(r3, ciudadFlores)
  AsignarArea(r4, ciudadR4)
  AsignarArea(r4, ciudadFlores)
  AsignarArea(jefe, ciudadJefe)
  Iniciar(r1, 2,1)
  Iniciar(r2, 3,1)
  Iniciar(r3, 4,1)
  Iniciar(r4, 5,1)
  Iniciar(jefe, 1,1)
fin